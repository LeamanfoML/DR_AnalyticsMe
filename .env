# Конфигурация окружения для NFT Arbitrage Bot
# Скопируйте в .env и замените значения на реальные

BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_telegram_chat_id
DB_PATH=/path/to/your/arbitrage.db
TONNEL_AUTH=your_tonnel_auth_token
PORTALS_AUTH=your_portals_api_key

# Пример TONNEL_AUTH:
# TONNEL_AUTH=user=%7B%22id%22%3A123456789%2C%22first_name%22%3A%22Name%22%2C%22last_name%22%3A%22Surname%22%2C%22username%22%3A%22username%22%7D&signature=xxxx

# Параметры API (обычно не меняются)
PORTALS_API_URL=https://portals-market.com/api/v2/gifts
TONNEL_API_URL=https://market.tonnel.network/auctions

# Настройки обновления (в секундах)
UPDATE_INTERVAL=45
MIN_PROFIT_THRESHOLD=0.1
